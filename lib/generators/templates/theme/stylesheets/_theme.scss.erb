$myg-theme--<%= options[:name] %>: (
  accent: (
    light: #4063e8,
    base: #042ecb,
    dark: #052ab3,
    contrast: #fff
  ),
  text: (
    lighter: #bec7cf,
    light: #97a4b0,
    base: #657786,
    dark: #3d4553,
    darker: #14171a
  ),
  background: (
    lighter: #fcfcfc,
    light: #fff,
    base: #fff,
    dark: #ecf2f7,
    darker: #ebf5fe
  ),
  border: #dce2e7,
  box-shadow: rgba(#000, 0.05),
  error: #f6809a,
  success: #6adb83,
  overlay: (
    light: transparentize(#e7ecf0, 0.13),
    dark: transparentize(#14171a, 0.87)
  )
);
